<div class="block">         
  <div class="content">
	<div class="content-header">
    	<h2>
		<%= t("texts.contact.edit_avatar", :name => (link_to @contact.name, contact_path(@contact)) ).html_safe %>
		</h2>
	</div>
    <div class="inner">
		<%= semantic_form_for @contact, :html => { :multipart => true } do |form| %>
			<%= form.inputs :class => "column_left", :style => "width: 80px" do %>
				<%= contact_avatar(@contact) %>
			<% end %>
			<%= form.inputs :class => "column_left", :style => "" do %>
				<%= form.input :avatar, :as => :file, :label => false %>
				<%= form.input :avatar_cache, :as => :hidden %>
				<%= form.input :remove_avatar, :as => :boolean %>
			<% end %>
			<div class="clear"></div>

			<div class="group navform wat-cf">
			  <%= submit_button %>
			</div>
		<% end %>
		
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>