<table class = "table">
	<tr>
		<th>
			<%= t("activerecord.attributes.event.name", :default => t("activerecord.labels.name", :default => "Name")) %>
		</th>
		<th><%= t("activerecord.attributes.event.description", :default => "Descrição")  %></th>
		<th class  = "last">&nbsp;</th>
	</tr>
	<% @events.each do |event| %>
	<tr class   = "<%= cycle("odd", "even") %>">
		<td>
			<%= link_to event.name, edit_event_path(event) %>
		</td>
		<td>
			<%= truncate(event.description.gsub(/<\/?[^>]*>/, ""), :length => 70, :omission => "...").html_safe if event.description.present? %>
		</td>
		<td class  = "last">
			<%= link_to "#{t("application..show", :default => "Show")}", event_path(event) %> |
			<%= link_to "#{t("application..edit", :default => "Edit")}", edit_event_path(event) %> |
			<%= link_to "#{t("application..delete", :default => "Delete")}", event_path(event), :remote => true, :method => :delete, :confirm => "#{t("application..confirm", :default => "Are you sure?")}" %>
		</td>
	</tr>          
	<% end -%>
</table>
