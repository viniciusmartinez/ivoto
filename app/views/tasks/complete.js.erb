<% @object_dom = dom_id(@task) %>
$("#<%= @object_dom %>").find("input.complete").removeAttr("disabled");
<% if @task.completed %>
$("#<%= @object_dom %>").fadeTo("slow", 0.5);
$("#<%= @object_dom %>").find(".task_content .text").css("text-decoration", "line-through");
<% else %>
$("#<%= @object_dom %>").fadeTo("slow", 1);
$("#<%= @object_dom %>").find(".task_content .text").css("text-decoration", "none");
<% end %>

