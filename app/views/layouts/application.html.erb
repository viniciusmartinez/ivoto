<!DOCTYPE html>
<html>
<head>
  <title><%= t("application_name", :default => "Organizer") %></title>
  <%= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/default/style", "web-app-theme/override" %>
  <%= stylesheet_link_tag "formtastic", "formtastic_changes" %>
  <%= stylesheet_link_tag "fullcalendar", "jquery.tipsy", "jquery.cleditor", "ui.datepicker" %>
  <%= stylesheet_link_tag "ui-icons", "jquery.ui", "application" %>

  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/i18n/jquery-ui-i18n.min.js" %>

  <%= javascript_include_tag "jquery.zweatherfeed", "jquery.valtastic", "fullcalendar", "jquery.elastic", "jquery.maskedinput", "jquery.tipsy", "jquery.defaultvalue", "jquery.cleditor" %>
  <%= javascript_include_tag "application", "rails" %>
  <% javascript_tag do %>
    <%= yield :javascript %>
  <% end %>
  <%= csrf_meta_tag %>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/"><%= t("application_name", :default => "Organizer") %></a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
		  <li><%= link_to t("application.preferences", :default => "Preferences"), preferences_path %></li>
		  <li><%= link_to t("application.logout", :default => "Logout"), logout_path %></li>
        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf">
			<%= main_navigation %>
        </ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p class="gray_small">Copyright &copy; <%= Time.now.year %></p>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>
